<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_item_application"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:layout_toEndOf="@+id/img_item_application"
        android:textSize="25sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:id="@+id/tv_name_application_item"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_name_application_item"
        android:layout_toStartOf="@+id/switch_compat_item"
        android:layout_toEndOf="@id/img_item_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_between_status_and_time"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="3dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/tv_status_item"
            android:layout_toStartOf="@id/tv_between_status_and_time"
            android:text="on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="3dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/tv_time_item"
            android:layout_toEndOf="@id/tv_between_status_and_time"
            android:text="10:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.appcompat.widget.SwitchCompat
        android:layout_marginEnd="3dp"
        android:id="@+id/switch_compat_item"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:thumb="@drawable/custom_thumb_switchcompat"
        app:track="@drawable/custom_track_switchcompat"
        app:showText="true"
        android:textOn="on"
        android:textOff="off"/>
</RelativeLayout>